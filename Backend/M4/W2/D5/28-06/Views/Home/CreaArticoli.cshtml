@model _28_06.Entities.Articolo

@{
    ViewData["Title"] = "Crea articoli";
}

<h1 class="mb-4 text-center">Crea Articolo</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="CreaArticoli" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger fs-5 fw-bold"></span>
            </div>

            <div class="form-group">
                <label asp-for="Prezzo" class="control-label">Prezzo</label>
                <input asp-for="Prezzo" type="number" class="form-control" />
                <span asp-validation-for="Prezzo" class="text-danger fs-5 fw-bold"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descrizione" class="control-label">Descrizione</label>
                <textarea asp-for="Descrizione" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Descrizione" class="text-danger fs-5 fw-bold"></span>
            </div>

            <div class="form-group mt-2 text-center">
                <label asp-for="ImgCopertina" class="control-label">Aggiungi un'immagine principale</label>
                <input asp-for="ImgCopertina" type="file" class="form-control-file" />
               
            </div>

            <div class="form-group mt-2 text-center">
                <label asp-for="ImgProdotto1" class="control-label">Aggiungi una seconda immagine</label>
                <input asp-for="ImgProdotto1" type="file" class="form-control-file" />
               
            </div>

            <div class="form-group mt-2 text-center">
                <label asp-for="ImgProdotto2" class="control-label">Aggiungi una terza immagine</label>
                <input asp-for="ImgProdotto2" type="file" class="form-control-file" />
               
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-success-gradient btn-lg mt-3">Crea Articolo</button>
            </div>

        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Articoli" class="btn btn-secondary-gradient">Torna alla lista degli Articoli</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
