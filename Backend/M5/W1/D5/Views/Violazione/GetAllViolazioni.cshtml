@model IEnumerable<Project.Models.Violazione>

@{
    ViewData["Title"] = "Violazioni";
}

<h1 class="bg-opacity-25 bg-warning text-center">Violazioni</h1>
<div class="mb-3 btn-sticky">
    <a asp-controller="Home" asp-action="Index" class="btn btn-danger">INDIETRO</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Descrizione</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var violazione in Model)
        {
            <tr>
                <td>@violazione.IDViolazione</td>
                <td>@violazione.Descrizione</td>
            </tr>
        }
    </tbody>
</table>
