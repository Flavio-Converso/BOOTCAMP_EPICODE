<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Project.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Carter+One&family=Concert+One&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3 bb">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img class="img-fluid" src="~/images/logo.png" alt="Alternate Text" style="width:130px; height:100px" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item align-content-center">
                            <a class="nav-link text-dar" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item align-content-center">
                                <a class="nav-link text-dar" asp-area="" asp-controller="Auth" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item align-content-center">
                                <a class="nav-link text-dar" asp-area="" asp-controller="Auth" asp-action="Login">Login</a>
                            </li>
                        }
                    
                        else
                        {
                            <li class="nav-item align-content-center">
                                <a class="nav-link text-dar" asp-area="" asp-controller="Home" asp-action="Management">Management</a>
                            </li>
                                            
                        }
                        <div class="mx-auto">
                            <h1 id="tmp">CrazyHotels</h1>
                        </div>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item ms-auto align-content-center">
                                <form id="logoutForm" asp-area="" asp-controller="Auth" asp-action="Logout" method="post" class="form-inline">
                                    <button type="submit" class="nav-link btn btn-link text-dar">Logout</button>
                                </form>
                            </li>    
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" >
            @RenderBody()
        </main>
    </div>
    <div class="mt-5">
    <footer class="foote mt-3">
        <div class="container container-footer">
            <div class="row">
                <div class="col-xs-1 col-md-2 d-flex justify-content-center justify-content-lg-start d-lg-block">

                        <img class="img-fluid" src="~/images/logo.png" alt="logo" />
                </div>
                <div class="col-xs-2 col-md-1 text-center d-flex flex-lg-column flex-row justify-content-center align-items-lg-center">
            
                        <span class="align-content-center"><a class=" ps-5 ps-md-0 " href="#"><i class="bi bi-facebook fs-3"></i></a></span>
                        <span class="align-content-center"><a class=" ps-5 ps-md-0 " href="#"><i class="bi bi-instagram fs-3"></i></a></span>
                        <span class="align-content-center"><a class=" ps-5 ps-md-0 " href="#"><i class="bi bi-twitter-x fs-3"></i></a></span>
                </div>
                <div class="col-xs-2 col-md-2 d-md-flex justify-content-md-start flex-md-column">
                    <h5 class="fw-bold text-center text-md-start">Download</h5>                  
                        <span><a class=" ps-5 ps-md-0" href="#">Android app</a></span>
                        <span><a class=" ps-5 ps-md-0" href="#">Apple app</a></span>
                        <span><a class=" ps-5 ps-md-0" href="#">Desktop app</a></span>
              
            </div>
                <div class="col-xs-2 col-md-2 d-md-flex justify-content-md-start flex-md-column">
                    <h5 class="fw-bold text-center text-md-start">Chi siamo?</h5>                  
                    <span><a class=" ps-5 ps-md-0" href="#">Compagnia</a></span>
                        <span><a class=" ps-5 ps-md-0" href="#">Contatti</a></span>
                        <span><a class=" ps-5 ps-md-0" href="#">Email</a></span>
                        <span><a class=" ps-5 ps-md-0" href="#">Privacy</a></span>
       </div>
                <div class="col-xs-2 col-md-2 d-md-flex  justify-content-md-start flex-md-column">
                    <h5 class="fw-bold text-center text-md-start">Servizi</h5>
                   
                    <span><a class=" ps-5 ps-md-0" href="#">Prenota</a></span>
                    <span><a class=" ps-5 ps-md-0" href="#">Affitta</a></span>
              
            </div>
                <div class="col-xs-2 col-md-2 d-md-flex justify-content-md-start flex-md-column">
                    <h5 class="fw-bold text-center text-md-start">Cosa vuoi vedere?</h5>             
                        <span><a class=" ps-5 ps-md-0" href="#">Home</a></span>
                        <span><a class=" ps-5 ps-md-0" href="#">Offerte</a></span>
                        <span><a class=" ps-5 ps-md-0" href="#">Registrati</a></span>
                        <span><a class=" ps-5 ps-md-0" href="#">Accedi</a></span>
                
           

        </div>   
        </div>  
               <div class="mb-2">
                    <div class="text-center fw-bold anno">© 
                        @DateTime.Now.Year - CrazyHotels</div>
               </div>
        </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
